<Window x:Class="Conway_Nativity_Directory.ChangelogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conway_Nativity_Directory"
        mc:Ignorable="d"
        Title="Changelogs" Height="550" Width="1000" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="versionsListView" Margin="10,10,5,10"/>
        <TextBox x:Name="changeLog" Grid.Column="1" Margin="5,10,10,10"
                 IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" AcceptsTab="True"/>
    </Grid>
</Window>

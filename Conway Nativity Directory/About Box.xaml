<Window x:Class="Conway_Nativity_Directory.About_Box"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conway_Nativity_Directory"
        mc:Ignorable="d"
        Title="About" Height="350" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <StackPanel Margin="0,0,0,38">
            <Image Name="iconImage" Height="96" Margin="10"/>
            <TextBlock Text="Conway Nativity Directory" FontSize="30" FontWeight="Bold" TextAlignment="Center" Padding="2"/>
            <TextBlock Name="versionTextBox" Text="Version" FontSize="14" TextAlignment="Center"/>
            <TextBlock Text="Copyright© 2021 Landon Conway" FontSize="14" TextAlignment="Center" Padding="0,10,0,0"/>
        </StackPanel>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100" Height="23" Click="Button_Click"/>
    </Grid>
</Window>

<UserControl x:Class="Conway_Nativity_Directory.CachePreferenceUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Conway_Nativity_Directory"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Cache Folder: " VerticalAlignment="Center"/>
            <TextBox Name="cacheFolderTextBox" Width="400" Height="22"/>
            <Button Name="browseButton" Content="Browse" Width="100" Height="24" Margin="10,0"
                    Click="BrowseButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>

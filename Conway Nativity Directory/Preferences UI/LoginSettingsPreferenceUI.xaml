<UserControl x:Class="Conway_Nativity_Directory.LoginSettingsPreferenceUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Conway_Nativity_Directory"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Password: " VerticalAlignment="Center"/>
            <TextBox Name="passwordTextBox" Width="400" Height="22"/>
        </StackPanel>
        <TextBlock Text="Type a password to create one. If the password is empty, a password will not be created."
                   Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
